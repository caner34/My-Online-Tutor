<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rounded_rectangle_4"
    android:padding="28dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/texViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/textStyleA"
            android:textSize="24sp"
            android:textColor="@color/colorBlack" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:weightSum="2"
        android:orientation="horizontal" >



        <LinearLayout
            android:id="@+id/linearLayoutButtonNegative"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rectangle_3"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/texViewButtonNegative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                style="@style/textStyleA"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rectangle_3"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/texViewButtonPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                style="@style/textStyleA"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />


        </LinearLayout>




    </LinearLayout>




</LinearLayout>