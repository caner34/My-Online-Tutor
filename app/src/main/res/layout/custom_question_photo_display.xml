<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/textViewQuestionDisplayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                style="@style/textStyleA.Title"
                android:layout_gravity="center"
                android:gravity="center" />


            <WebView
                android:id="@+id/webViewQuestionDisplayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:orientation="vertical" >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="vertical" >


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearLayoutZoomTutorial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle_5"
                        android:orientation="vertical" >


                        <TextView
                            android:id="@+id/texViewZoomTutorial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp"
                            android:gravity="center"
                            style="@style/textStyleA"
                            android:textSize="18sp"
                            android:text="@string/constant_zoom"
                            android:textColor="@color/colorBlack" />



                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:weightSum="7"
                    android:orientation="horizontal" >



                    <LinearLayout
                        android:id="@+id/linearLayoutButtonNegative"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle_3"
                        android:orientation="vertical" >


                        <TextView
                            android:id="@+id/texViewButtonNegative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            style="@style/textStyleA"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayoutPositive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:weightSum="7"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_rectangle_4"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageViewMiniYoutubeIcon"
                            android:layout_weight="3"
                            android:visibility="gone"
                            android:src="@drawable/youtube_icon"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"/>


                        <TextView
                            android:layout_weight="4"
                            android:id="@+id/texViewButtonPositive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="14dp"
                            android:gravity="center"
                            style="@style/textStyleA"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack" />


                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>